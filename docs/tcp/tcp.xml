		<transition id="id9">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="-382" y="-67">syn?</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">TcpClient</name>
		<declaration>// Place local declarations here.
clock t;
int retry_count = 0;
</declaration>
		<location id="id10" x="-365" y="-102">
			<name x="-391" y="-136">CLOSED</name>
		</location>
		<location id="id11" x="-119" y="-102">
			<name x="-153" y="-136">SYN_SENT</name>
