	<declaration>
// Channels for TLS handshake and HTTP
broadcast chan client_hello, server_hello, certificate_send;
broadcast chan key_exchange, finished_send, http_request, http_response;
broadcast chan attacker_intercept, attacker_forward;

// Certificate structure
typedef struct {
    int[0,1000] server_id;
    int[0,1000] ca_signature;
    bool valid;
    bool self_signed;
} Certificate;

// TLS Message structure
typedef struct {
    int[0,1000] nonce;
    int[0,1000] session_key;
    bool encrypted;
    Certificate cert;
} TLSMessage;

// Generic HTTP/APP message structure (generic payload, not an explicit money transfer)
typedef struct {
    int[0,1000] payload;    // generic content identifier / value
    bool encrypted;         // whether payload is protected by TLS
    int[0,1000] hmac;       // small integrity token (modelled as an int)
} HTTPMessage;

// Global messages and helper variables
TLSMessage client_tls, server_tls;
HTTPMessage http_req, http_resp;
Certificate received_cert, legitimate_cert, fake_cert;
int[0,1000] original_payload = 0;        // what the client intended to send
int[0,1000] server_received_payload = 0; // copy of payload the server actually processes

// Security state
bool tls_established = false;
bool cert_validated = true;
bool mitm_active = true;
bool attack_detected = false;

// Session keys
int[0,1000] client_session_key = 0;
int[0,1000] server_session_key = 0;
int[0,1000] attacker_session_key = 0;

// Attack tracking
bool cert_spoofed = false;
int[0,10] attack_count = 0;

// Constants
const int LEGITIMATE_SERVER = 100;
const int ATTACKER_ID = 666;
const int TRUSTED_CA = 50;
const int FAKE_CA = 999;  // Attacker's CA, pre-installed via previous attack
const int ATTACKER_PAYLOAD = 777;       // payload the attacker may substitute
const int ATTACKER_RESP_PAYLOAD = 888;  // response payload attacker may substitute

</declaration>
